<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:paddingBottom="@dimen/margin_large"
android:layout_below="@id/toolbar"
android:background="@color/colorAccent">

<ImageView
    android:id="@+id/view_banner_info_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_default"
    android:src="@drawable/ic_info"
    android:tint="@android:color/white"/>

<TextView
    android:id="@+id/view_banner_info_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/indent_list_text"
    style="@style/Subheader"
    android:textColor="@android:color/white"
    android:text="@string/unknown"/>

<TextView
    android:id="@+id/view_banner_info_explanation"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/indent_list_text"
    android:layout_marginEnd="@dimen/margin_default"
    android:layout_below="@id/view_banner_info_title"
    android:textColor="@android:color/white"
    android:text="@string/unknown"/>

</RelativeLayout>
